
{{> header}}
{{> nav}}  
<form action="/books" id="new-book", method="POST">
    <fieldset>
        <legend>New Book</legend>

        <!--Book Name-->
        <p>
            <label for="book-name">Book Name</label><br>
            <input id="book-name" type="text" name="name" placeholder="Enter Book Title" />
        </p>

           <!--Author-->
        <p>
            <label for="book-author">Author</label><br>
            <input id="book-author" type="text" name="author" placeholder="Enter Author's Name" />
        </p>

         <!--Category-->
        <p>
            <label for="book-category">Category</label><br>
            <input id="book-category" type="text" name="category"  placeholder="Book Category"/>
        </p>

         <!--Photos-->
        <p>
            <label for="photos">Photos</label><br>
            <input id="photos" type="text" name="photos" placeholder="Add book photos"/>
        </p>

        <!-- recording -->
        <p>
           <label for="recording">Recording</label><br>
           <input id="recording" type="recording" name="recording" placeholder="Add your recording"/>
       </p>

          <!-- page-one -->
        <p>
           <label for="page-one">Page One</label><br>
           <textarea id="page-one" type="" name="pageOne" placeholder="Enter book text"></textarea>
       </p>

           <!-- page-two -->
        <p>
           <label for="page-two">Page Two</label><br>
           <textarea id="page-one" type="text" name="pageTwo" placeholder="Enter book text"></textarea>
       </p>

           <!-- page-three -->
        <p>
           <label for="page-three">Page Three</label><br>
           <textarea id="page-three" type="text" name="pageThree" placeholder="Enter book text"></textarea>
       </p>

           <!-- page-four -->
        <p>
           <label for="page-four">Page Four</label><br>
           <textarea id="page-four" type="text" name="pageFour" placeholder="Enter book text"></textarea>
       </p>

           <!-- page-five -->
        <p>
           <label for="page-five">Page Five</label><br>
           <textarea id="page-five" type="text" name="pageFive" placeholder="Enter book text"></textarea>
       </p>



    </fieldset>

<!-- SAVE BUTTON -->
    <p>
       <button type="submit">Save Book</button>
    </p>
</form>