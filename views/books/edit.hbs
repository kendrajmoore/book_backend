{{> header}}
{{> nav}}

<form action='/books/{{book._id}}?_method=PUT' method='POST' >
    <fieldset>
        <legend>Edit Book</legend>


         <!--Book Name-->
        <p>
            <label for="book-name">Book Name</label><br>
            <input id="book-name" type="text" name="name" value="{{book.name}}"/>
        </p>

           <!--Author-->
        <p>
            <label for="book-category">Author</label><br>
            <input id="book-author" type="text" name="book-author" value="{{book.author}}"/>
        </p>

         <!--Category-->
        <p>
            <label for="book-category">Category</label><br>
            <input id="book-category" type="text" name="book-category" value="{{book.category}}"/>
        </p>

         <!--Photos-->
        <p>
            <label for="photos">Photos</label><br>
            <input id="photos" type="text" name="photos" value="{{book.category}}"/>
        </p>

        <!-- recording -->
        <p>
           <label for="recording">Recording</label><br>
           <input id="recording" type="text" name="recording" value="{{book.recording}}"/>
       </p>

        <!-- page-one -->
        <p>
           <label for="page-one">Page One</label><br>
           <textarea id="page-one" type="" name="pageOne" value="{{book.pageOne}}"/>
       </p>

           <!-- page-two -->
        <p>
           <label for="page-two">Page Two</label><br>
           <textarea id="page-two" type="text" name="pageTwo" value="{{book.pageTwo}}"/>
       </p>

           <!-- page-three -->
        <p>
           <label for="page-three">Page Three</label><br>
           <textarea id="page-three " type="text" name="pageThree" value="{{book.pageThree}}"/>
       </p>

           <!-- page-four -->
        <p>
           <label for="page-four">Page Four</label><br>
           <textarea id="page-four" type="text" name="pageFour" value="{{book.pageFour}}"/>
       </p>

           <!-- page-five -->
        <p>
           <label for="page-five">Page Five</label><br>
           <textarea id="page-five" type="text" name="pageFive" value="{{book.pageFive}}"/>
       </p>


    </fieldset>
<!-- SAVE BUTTON -->
    <p>
       <button type="submit">Save Book</button>
   </p>
</form>