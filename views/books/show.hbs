{{> nav}}

<div class="show-page">


<div class="video">
<video width="320" height="240" autoplay>
  <source src="{{book.recording}}" type="video/webm">
</video>
</div>

<!--this is the world your book lives in-->
<div class="bookContainer">


  <!--this is the whole book-->
  <div class="book hoveit">

    <!--the top of your book - shows pages-->
    <div class="bookTop"></div>

    <!--this is the side of your book where you'll put a title, author, or anything else-->
    <div class="bookSide">
      <p>{{book.name}}</p>
      <p>{{book.author}}</p>
    </div>

    <!--this is the side of the book that has pages-->
    <div class="bookSide2"></div>

    <!--this is the backside of your book. Put whatever you'd like here.-->
    <div class="page backBook">Back of book</div>

    <!--this is the bottom of your book. It shows pages.-->
    <div class="bookBottom"></div>

    <!--this is the cover of your book. Put your title here along with anything else-->
    <div class="page cover">
      <h1>{{book.name}}</h1>
      {{!-- <p>By: <a class="author" href="http://www.joerezendes.com/">Joe Rezendes</a></p> --}}
      <!-- Place this tag where you want the button to render. -->
    </div>

    <!--display your book pages in descending order. New pages are added to the top here.
        It's important you give each page the page and pagecontent class, along with a pagenumber class-->

    <div class="page pagecontent eleventhPage bookBack">

    </div>
 
  <div class="page pagecontent tenthPage">
      {{book.pageTen}}
    </div>


  <div class="page pagecontent ninthPage">
      {{book.pageNine}}
      <img class="img-page" src="{{book.imageNine}}" alt="{{this.imageMoon}}">
    </div>

  <div class="page pagecontent eigthPage">
      {{book.pageEight}}
      <img class="img-page" src="{{book.imageEight}}" alt="{{this.imageMoon}}">
    </div>


   <div class="page pagecontent seventhPage">
      {{book.pageSeven}}
      <img class="img-page" src="{{book.imageSeven}}" alt="{{this.imageMoon}}">
    </div>


    <div class="page pagecontent sixthPage">
      {{book.pageSix}}
       <img class="img-page" src="{{book.imageSix}}" alt="{{this.imageMoon}}">
    </div>

    <div class="page pagecontent fiffthPage">
      {{book.pageFive}}
      <img class="img-page" src="{{book.imageFive}}" alt="{{this.imageMoon}}">
    </div>

    <div class="page pagecontent fourthPage">
      {{book.pageFour}}
      <img class="img-page" src="{{book.imageFour}}" alt="{{this.imageMoon}}">
    </div>


    <div class="page pagecontent thirdPage">
      {{book.pageThree}}
      <img class="img-page" src="{{book.imageThree}}" alt="{{this.imageMoon}}">
    </div>

    <div class="page pagecontent secondPage">
        {{book.pageTwo}}
        <img  class="img-page" src="{{book.imageTwo}}" alt="{{this.imageMoon}}">
    </div>

    <div class="page pagecontent firstPage">
     {{book.pageOne}}
     <img class="img-page" src="{{book.imageOne}}" alt="{{this.imageMoon}}">
    </div>

  </div><!--book-->
</div>
